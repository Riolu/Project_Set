<script>
$(function(){

  var weiboList=new RMWeibo.Class.WeiboList($('#indexFeedList'));
  var mainPublisher = $('#mainPublisher')[0]; 
  mainPublisher.RMWeiboObject.onpublish = function(data){
    if($('#indexFeedLists div[data-type=nowb]').length==1){
      $('#indexFeedLists div[data-type=nowb]').hide();
    }
      weiboList.addItem(data);
  };
     
  $("a[data-nodetype=btn_cream]").click(function(){
          if(confirm("确定进行此操作?")){
              var upstar=1;
              $_this=$(this);
              $_father=$(this).closest('div.list_item');
              if($_father.find("span.icon_best").length!=0){
                upstar=0;
              }
              indexV3Ajax.setTopicStar($("#topicId").val(),$_father.attr("data-contentid"),upstar,$("#topictitle").val(),$_father.attr("data-az"),$_father.find("a[data-widget=userCard]").attr("data-userid"),function(data){
                  if(data==1){
                    if(upstar==1){
                      $_father.find("div.list_user").append('<span class="icon_best"><img src="http://t.people.com.cn/microblog-v3//images/best.png"></span>');
                      $_this.text("取消加精");
                    }else{
                      $_father.find("span.icon_best").remove();
                      $_this.text("加精");
                    }
                  }else if(data==-1){
                    RMWeibo.tools.showmsg('请登录！', 200);
                  }
              });
            }
    });
});

  

 
</script>


